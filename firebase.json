{
  "functions": {
    "source": ".",
    "predeploy": ["npm run build"]
  },
  "hosting": {
    "predeploy": [
      "rm -rf public/* && mkdir -p public/.nuxt && cp -r .nuxt/dist/client/ public/.nuxt && cp -a src/static/. public/"
    ],
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrapp"
      }
    ]
  }
}
